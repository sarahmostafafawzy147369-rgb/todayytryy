<Window x:Class="Employee.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee"
        mc:Ignorable="d"
        Title="AdminWindow" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label
                Width="70"
                Height="40"
                FontSize="20"
                Content="TaskId" Margin="0,0,20,0"/>
            <TextBlock 
                Width="100"
                Height="40"
                x:Name="txt_taskId" Margin="0,0,100,0"/>
            <Label
     Width="70"
     Height="40"
     FontSize="20"
     Content="Status" Margin="0,0,20,0"/>
            <ComboBox 
     Width="150"
     Height="40"
     x:Name="cmb_status"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label
                Width="70"
                Height="40"
                FontSize="20"
                Content="Title" Margin="0,0,20,0"/>
            <TextBox 
                Width="100"
                Height="40"
                x:Name="txt_title" Margin="0,0,100,0"/>
            <Label
                Width="150"
                Height="40"
                FontSize="20"
                Content="EmployeeName" Margin="0,0,20,0"/>
            <TextBox 
                Width="150"
                Height="40"
                x:Name="txt_name"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label
                Width="150"
                Height="40"
                FontSize="20"
                Content="Description" Margin="0,0,0,0"/>
            <TextBox            
                Width="150"
                Height="40"
                x:Name="txt_Desc" Margin="0,0,100,0"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button 
                FontSize="20"
                Height="50"
                Width="70"
                Content="Add" Margin="0,0,50,0" Click="Button_Click"/>
            <Button 
                FontSize="20"
                Height="50"
                Width="70"
                Content="Edit" Margin="0,0,50,0" Click="Button_Click_2"/>
            <Button 
                FontSize="20"
                Height="50"
                Width="70"
                Content="Delete" Margin="0,0,50,0" Click="Button_Click_1"/>
        </StackPanel>
        <DataGrid
            x:Name="dg_admin"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            Grid.Row="4" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee_Name" Binding="{Binding Users.Name}"/>
                <DataGridTextColumn Header="TaskId" Binding="{Binding TaskID}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
