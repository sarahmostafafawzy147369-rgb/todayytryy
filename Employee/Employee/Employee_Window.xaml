<Window x:Class="Employee.Employee_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee"
        mc:Ignorable="d"
        Title="Employee_Window" Height="750" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label
                FontSize="26"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                x:Name="txtname"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label 
                Width="259"
                Height="50"
                HorizontalAlignment="Left"
                FontSize="25"
                Content="Pending/In progress" Background="#FFB5B0B0"/>
        </Grid>
        <Grid Grid.Row="2">
            <DataGrid 
                AutoGenerateColumns="False"
                IsReadOnly="True"
                x:Name="dg_piending" SelectionChanged="dg_piending_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="TaskId" Binding="{Binding TaskID }"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description }"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status }"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <Label Content="TaskId" FontSize="25" Width="80" Height="40"/>
                <TextBox
                    x:Name="txt_Id"
                    Width="80"  Height="40" Margin="0,0,30,0"/>
                <Label Content="Status" FontSize="25" Width="80" Height="40"/>
                <ComboBox 
                    x:Name="cmb_status"
                    Width="150"  Height="30" Margin="0,0,100,0"/>
                
                <Button
                    Content="Save"
                    FontSize="20"
                    Width="80"  
                    Height="40" Click="Button_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <Label 
             Width="200"
             Height="50"
             HorizontalAlignment="Left"
             FontSize="25"
              Content="Compeleted" Background="#FFB5B0B0"/>
        </Grid>
        <Grid Grid.Row="5">
            <DataGrid x:Name="dg_compeleted" SelectionChanged="dg_compeleted_SelectionChanged" />
        </Grid>
    </Grid>
</Window>
